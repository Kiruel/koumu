{
    "compilerOptions": {
        "target": "es2022",
        "lib": ["es2022"],
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "skipLibCheck": true,
        "baseUrl": "src/",
        "paths": {
            "@/*": ["*"],
            "package.json": ["../package.json"]
        }
    },
    "ts-node": {
        "transpileOnly": true,
        "require": ["tsconfig-paths/register"]
    }
}
